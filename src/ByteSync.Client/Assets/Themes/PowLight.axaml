<Style xmlns="https://github.com/avaloniaui"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:sys="clr-namespace:System;assembly=netstandard">
    <Style.Resources>
        <!-- System Control Colors -->
        <Color x:Key="VeryLightGray">#FFF7F7F7</Color>
        <Color x:Key="GenericButtonBorder">#FFAAAAAA</Color>
        <Color x:Key="Gray1">#FF333333</Color>
        <Color x:Key="Gray2">#FF7F7F7F</Color>
        <Color x:Key="Gray5">#FFB9B9B9</Color>
        <Color x:Key="Gray8">#FFE0E0E0</Color>
        
        <Color x:Key="SettingsHeaderColor">#FFE6E6E6</Color>
        <Color x:Key="BlockBackColor">#FFFFFFFF</Color>
        
        <SolidColorBrush x:Key="VeryLightGrayBrush" Color="{DynamicResource VeryLightGray}" />
    </Style.Resources>
</Style>