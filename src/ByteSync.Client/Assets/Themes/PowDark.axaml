<Style xmlns="https://github.com/avaloniaui"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:sys="clr-namespace:System;assembly=netstandard">
    <Style.Resources>
        <!-- System Control Colors -->
        <Color x:Key="VeryLightGray">#FF121212</Color>
        <Color x:Key="GenericButtonBorder">#FF555555</Color>
        <Color x:Key="Gray1">#FFCCCCCC</Color>
        <Color x:Key="Gray2">#FF808080</Color>
        <Color x:Key="Gray5">#FF464646</Color>
        <Color x:Key="Gray8">#FF272727</Color>
        
        <Color x:Key="SettingsHeaderColor">#FF303030</Color>
        <Color x:Key="BlockBackColor">#FF1F1F1F</Color>
        
        <SolidColorBrush x:Key="VeryLightGrayBrush" Color="{DynamicResource VeryLightGray}" />
    </Style.Resources>
</Style>