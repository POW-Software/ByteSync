<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:misc="clr-namespace:ByteSync.Views.Misc">
    
    <Style Selector="misc|TagEditor">
        <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAltHighBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="MinHeight" Value="30"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="{TemplateBinding Padding}">
                    <Grid ColumnDefinitions="Auto,*"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Stretch">
                        <ItemsControl Grid.Column="0" Name="PART_TagsPanel" ItemsSource="{TemplateBinding Tags}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Name="PART_WrapPanel" Orientation="Horizontal"
                                               ItemSpacing="4"
                                               VerticalAlignment="Top" />

                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border 
                                            CornerRadius="3"
                                            Margin="0,1,3,1"
                                            Padding="4,2">
                                        
                                        <!-- Background="{Binding Path=TagBackground, RelativeSource={RelativeSource AncestorType=misc:TagEditor}}" -->
                                        
                                        <Border.Styles>
                                            <!-- <Style Selector="Border"> -->
                                            <!--     <Setter Property="Background" Value="Red" /> -->
                                            <!--     <Style Selector="Border[IsValid=False]"> -->
                                            <!--         <Setter Property="Background" Value="Yellow" /> -->
                                            <!--     </Style> -->
                                            <!-- </Style> -->
                                            
                                            <Style>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsValid}" Value="False">
                                                        <Setter Property="Background" Value="Yellow" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsValid}" Value="True">
                                                        <Setter Property="Background" Value="Red" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                            
                                            <!-- <Style> -->
                                            <!--     <Style.Triggers> -->
                                            <!--         <DataTrigger Binding="{Binding IsValid}" Value="False"> -->
                                            <!--             <Setter Property="Background" Value="{DynamicResource InvalidTagBackground}" /> -->
                                            <!--         </DataTrigger> -->
                                            <!--         <DataTrigger Binding="{Binding IsValid}" Value="True"> -->
                                            <!--             <Setter Property="Background" Value="{DynamicResource ValidTagBackground}" /> -->
                                            <!--         </DataTrigger> -->
                                            <!--     </Style.Triggers> -->
                                            <!-- </Style> -->
                                        </Border.Styles>
                                        
                                       

                                        
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding}"
                                                       FontWeight="SemiBold"
                                                       Foreground="{Binding Path=TagForeground, RelativeSource={RelativeSource AncestorType=misc:TagEditor}}"
                                                       VerticalAlignment="Center" />
                                            <Button Content="×"
                                                    Padding="2,0"
                                                    Margin="3,0,0,0"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Foreground="{Binding Path=TagForeground, RelativeSource={RelativeSource AncestorType=misc:TagEditor}}"
                                                    Command="{Binding Path=RemoveTag, RelativeSource={RelativeSource AncestorType=misc:TagEditor}}"
                                                    CommandParameter="{Binding}" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <TextBox Grid.Column="1" Name="PART_TextBox"
                                 Classes="TagEditorTextBox"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="2,0"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Stretch"
                                 Text="{TemplateBinding CurrentText}"
                                 Watermark="{TemplateBinding Watermark}"
                                 Margin="3,0" />
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
    
    <Style Selector="TextBox.TagEditorTextBox">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="2,0"/>
        <Setter Property="MinWidth" Value="50"/>
        <Setter Property="MinHeight" Value="20"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    
    <Style Selector="TextBox.TagEditorTextBox:focus">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>
    
    <Style Selector="TextBox.TagEditorTextBox /template/ Border#PART_BorderElement">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="2,0"/>
        <Setter Property="MinHeight" Value="20"/>
    </Style>
    
    <Style Selector="TextBox.TagEditorTextBox:focus /template/ Border#PART_BorderElement">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>
</Styles>