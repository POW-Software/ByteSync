<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:misc="clr-namespace:ByteSync.Views.Misc">
    
    <Style Selector="misc|TagEditor">
        <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAltHighBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="MinHeight" Value="30"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="{TemplateBinding Padding}">
                    <WrapPanel VerticalAlignment="Center">
                        <ItemsControl Name="PART_TagsPanel" ItemsSource="{TemplateBinding Tags}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding Path=TagBackground, RelativeSource={RelativeSource AncestorType=misc:TagEditor}}"
                                            CornerRadius="3"
                                            Margin="0,1,3,1"
                                            Padding="4,2">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding}" 
                                                       FontWeight="SemiBold"
                                                       Foreground="{Binding Path=TagForeground, RelativeSource={RelativeSource AncestorType=misc:TagEditor}}"
                                                       VerticalAlignment="Center"/>
                                            <Button Content="×" 
                                                    Padding="2,0"
                                                    Margin="3,0,0,0"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Foreground="{Binding Path=TagForeground, RelativeSource={RelativeSource AncestorType=misc:TagEditor}}"
                                                    Command="{Binding Path=RemoveTag, RelativeSource={RelativeSource AncestorType=misc:TagEditor}}"
                                                    CommandParameter="{Binding}"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- TextBox avec style optimisé -->
                        <TextBox Name="PART_TextBox" 
                                 Classes="TagEditorTextBox"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="2,0"
                                 VerticalAlignment="Center"
                                 Text="{TemplateBinding CurrentText}"
                                 Watermark="{TemplateBinding Watermark}"
                                 Margin="3,0"/>
                    </WrapPanel>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
    
    <Style Selector="TextBox.TagEditorTextBox">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="2,0"/>
        <Setter Property="MinWidth" Value="50"/>
        <Setter Property="MinHeight" Value="20"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    
    <Style Selector="TextBox.TagEditorTextBox:focus">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>
    
    <Style Selector="TextBox.TagEditorTextBox /template/ Border#PART_BorderElement">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="2,0"/>
        <Setter Property="MinHeight" Value="20"/>
    </Style>
    
    <Style Selector="TextBox.TagEditorTextBox:focus /template/ Border#PART_BorderElement">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>
</Styles>