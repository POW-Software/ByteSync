<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:startUp="clr-namespace:ByteSync.ViewModels.StartUp"
             xmlns:misc="clr-namespace:ByteSync.ViewModels.Misc"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ByteSync.Views.Misc.SelectLocaleView"
>
    
    <!--<UserControl.DataContext>
        <startUp:SelectLocaleViewModel></startUp:SelectLocaleViewModel>
    </UserControl.DataContext>-->
    
    <Design.DataContext>
        <misc:SelectLocaleViewModel />
    </Design.DataContext>
    
    <Grid>
        <ComboBox BorderThickness="0" Items="{Binding Path=CultureDefinitions}" Classes="PowComboBox"
                  SelectedItem="{Binding Path=SelectedCulture}"
                  MinWidth="100">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Description}" FontFamily="{Binding}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </Grid>
</UserControl>
