<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:ByteSync.Views.Sessions.Members"
             xmlns:members="clr-namespace:ByteSync.ViewModels.Sessions.Members"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ByteSync.Views.Sessions.Members.DataNodeView">
    <Design.DataContext>
        <members:DataNodeViewModel />
    </Design.DataContext>
    <Border Width="600" Margin="6" Height="320" Background="{Binding MainGridBrush}" 
            CornerRadius="4" BorderThickness="1" BorderBrush="{DynamicResource Gray8}">
        <Grid Name="MainGrid" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <!-- Header -->
            <local:DataNodeHeaderView Grid.Row="0" DataContext="{Binding HeaderViewModel}" />
            <!-- Separator -->
            <Rectangle Grid.Row="1" Height="1" Fill="{DynamicResource SystemBaseLowColor}" Margin="3,6" />
            <!-- Actions -->
            <local:DataNodeActionsView Grid.Row="2" DataContext="{Binding ActionsViewModel}" />
            <!-- Sources (DataGrid) -->
            <local:DataNodeSourcesView Grid.Row="3" DataContext="{Binding SourcesViewModel}" />
            <!-- Status -->
            <local:DataNodeStatusView Grid.Row="4" DataContext="{Binding StatusViewModel}" />
        </Grid>
    </Border>
</UserControl>
