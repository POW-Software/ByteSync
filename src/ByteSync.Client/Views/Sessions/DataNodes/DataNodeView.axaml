<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dataNodes="clr-namespace:ByteSync.ViewModels.Sessions.DataNodes"
             xmlns:dataNodes1="clr-namespace:ByteSync.Views.Sessions.DataNodes"
             xmlns:misc="clr-namespace:ByteSync.Views.Misc"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ByteSync.Views.Sessions.DataNodes.DataNodeView">
    
    <Design.DataContext>
        <dataNodes:DataNodeViewModel />
    </Design.DataContext>

    <StackPanel Orientation="Horizontal">
        <Border Width="600" Margin="6" Height="320" Background="{Binding MainGridBrush}" 
                CornerRadius="4" BorderThickness="1" BorderBrush="{DynamicResource Gray8}">
            <Grid Name="MainGrid" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>

                <!-- First Row -->
                <dataNodes1:DataNodeHeaderView DataContext="{Binding HeaderViewModel}" Grid.Row="0" />

                <!-- Second Row -->
                <Rectangle Grid.Row="1" Height="1" Fill="{DynamicResource SystemBaseLowColor}" Margin="3,6" />

                <!-- Third Row -->
                <dataNodes1:DataNodeSourcesView DataContext="{Binding SourcesViewModel}" Grid.Row="2" Grid.RowSpan="2" />

                <!--Last Row-->
                <dataNodes1:DataNodeStatusView DataContext="{Binding StatusViewModel}" Grid.Row="4" />

            </Grid>
        </Border>
        
        <!-- Add DataNode Button -->
        <Button Classes="AccentButton" Margin="6 0 24 0 " Height="48" Width="48"
                VerticalAlignment="Center"
                Command="{Binding AddDataNodeCommand}" 
                IsVisible="{Binding ShowAddButton}">
            <misc:Icon FontSize="24" Value="RegularPlus" Margin="0" Width="24" Height="24" />
        </Button>
    </StackPanel>

</UserControl>
