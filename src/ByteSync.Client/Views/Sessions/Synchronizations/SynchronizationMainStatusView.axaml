<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:synchronizations="clr-namespace:ByteSync.ViewModels.Sessions.Synchronizations"
             xmlns:misc="clr-namespace:ByteSync.Views.Misc"
             xmlns:localizations="clr-namespace:ByteSync.Services.Localizations"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
             x:Class="ByteSync.Views.Sessions.Synchronizations.SynchronizationMainStatusView">

    <Design.DataContext>
        <synchronizations:SynchronizationMainStatusViewModel />
    </Design.DataContext>

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 6">
        <misc:ActivityIndicator Width="120" Height="100"
                                Margin="10,20,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"
                                IsVisible="{Binding IsMainProgressRingVisible}" />

        <Grid IsVisible="{Binding IsMainCheckVisible}" Margin="6"
              VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Main completion icon -->
            <misc:Icon FontSize="100" Value="{Binding MainIcon}"
                       Foreground="{DynamicResource HomeCloudSynchronizationBackGround}"
                       VerticalAlignment="Center" HorizontalAlignment="Center" />

            <!-- Error overlay icon (bottom-right) -->
            <misc:Icon FontSize="50" Value="SolidXCircle"
                       IsVisible="{Binding IsErrorOverlayVisible}"
                       Foreground="{Binding ErrorOverlayBrush}"
                       ToolTip.Tip="{Binding ErrorOverlayTooltip}"
                       VerticalAlignment="Bottom" HorizontalAlignment="Right"
                       Margin="0" />
        </Grid>

        <TextBlock Text="{Binding MainStatus}" TextAlignment="Center"
                   FontSize="17" FontWeight="Bold" Margin="6" />

        <StackPanel Height="30" Orientation="Horizontal" HorizontalAlignment="Center" Margin="6"
                    IsVisible="{Binding IsSynchronizationRunning}">
            <Button Classes="GenericButton" IsVisible="{Binding IsSynchronizationRunning}"
                    Command="{Binding Path=AbortSynchronizationCommand}" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <misc:Icon FontSize="12" Value="RegularX" />
                    <TextBlock Text="{localizations:Loc SynchronizationMain_AbortSynchronization}" />
                </StackPanel>
            </Button>
        </StackPanel>
    </StackPanel>
</UserControl>