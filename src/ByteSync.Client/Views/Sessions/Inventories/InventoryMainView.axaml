<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:inventories="clr-namespace:ByteSync.ViewModels.Sessions.Inventories"
             xmlns:local="clr-namespace:ByteSync.Views.Sessions.Inventories"
             mc:Ignorable="d" d:DesignWidth="1400" d:DesignHeight="450"
             x:Class="ByteSync.Views.Sessions.Inventories.InventoryMainView">

    <Design.DataContext>
        <inventories:InventoryMainViewModel />
    </Design.DataContext>

    <Grid Margin="6">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">

            <!--Before HasLocalInventoryStarted-->
            <Grid IsVisible="{Binding !HasLocalInventoryStarted}">
                <local:InventoryBeforeStartView DataContext="{Binding InventoryBeforeStartViewModel}" />
            </Grid>

            <!--Details, after HasLocalInventoryStarted-->
            <Grid IsVisible="{Binding HasLocalInventoryStarted}">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <!-- Top: Global status -->
                    <local:InventoryGlobalStatusView DataContext="{Binding InventoryGlobalStatusViewModel}" />

                    <Rectangle Height="1" StrokeThickness="1" Stroke="{DynamicResource SystemBaseLowColor}"
                               StrokeDashArray="1, 4" StrokeDashOffset="0" Margin="36,6" />

                    <!-- Bottom row: Local status + Identification + Analysis -->
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,6,0,0" MaxWidth="1800">
                        <local:InventoryLocalStatusView DataContext="{Binding InventoryLocalStatusViewModel}" MaxWidth="600" Margin="24,6" />
                        <local:InventoryLocalIdentificationView DataContext="{Binding InventoryLocalIdentificationViewModel}"
                                                                MaxWidth="600" Margin="24,6" />
                        <local:InventoryDeltaGenerationView DataContext="{Binding InventoryDeltaGenerationViewModel}" MaxWidth="600"
                                                            Margin="24,6" />
                    </WrapPanel>
                </StackPanel>
            </Grid>

        </StackPanel>
    </Grid>
</UserControl>