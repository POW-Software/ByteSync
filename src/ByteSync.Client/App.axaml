<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:byteSync="clr-namespace:ByteSync"
             xmlns:converters="clr-namespace:ByteSync.Services.Converters"
             x:Class="ByteSync.App" Name="ByteSync"
             RequestedThemeVariant="Dark">
    <Application.Resources>
        <ResourceDictionary>
            <!-- <ResourceDictionary.MergedDictionaries> -->
            <!--     <ResourceInclude Source="/Assets/Themes/PowLight.axaml"/> -->
            <!-- </ResourceDictionary.MergedDictionaries> -->
            
            <converters:FormatKbSizeConverter x:Key="FormatKbSizeConverter" />
            <converters:LobbyMemberStatusConverter x:Key="LobbyMemberStatusConverter" />
            <converters:BoolToDeploymentModeConverter x:Key="BoolToDeploymentModeConverter" />
            <converters:ProfileTypeConverter x:Key="ProfileTypeConverter" />
            <converters:ExecutionModeConverter x:Key="ExecutionModeConverter" />
            <converters:LocalInventoryPartStatusToIconConverter x:Key="InventoryProcessStatusToIconConverter" />
            <converters:LocalInventoryPartStatusToTextConverter x:Key="InventoryProcessStatusToTextConverter" />
            <converters:IntToLetterConverter x:Key="IntToLetterConverter" />
        </ResourceDictionary>
        
        <!-- <DynamicResourceExtension x:Key="BlockBackColor" ResourceKey="SystemAltHighColor" /> -->
        
        <!-- <StaticResourceExtension x:Key="BlockBackColor" ResourceKey="SystemAltHighColor" /> -->
        
        <StaticResource x:Key="BlockBackColor" ResourceKey="SystemAltHighColor" />
        
        <StaticResourceExtension x:Key="CurrentMemberBackGround" ResourceKey="SystemAccentColorLight1" />
        <StaticResourceExtension x:Key="OtherMemberBackGround" ResourceKey="SystemAccentColorLight2" />
        <StaticResourceExtension x:Key="DisabledMemberBackGround" ResourceKey="SystemChromeGrayColor" />
        
        <StaticResourceExtension x:Key="ConnectedMemberLetterBackGround" ResourceKey="SystemAccentColor" />
        <StaticResourceExtension x:Key="ConnectedMemberLetterBorder" ResourceKey="SystemAccentColor" />
        <StaticResourceExtension x:Key="DisabledMemberLetterBackGround" ResourceKey="SystemChromeGrayColor" />
        <StaticResourceExtension x:Key="DisabledMemberLetterBorder" ResourceKey="SystemChromeGrayColor" />
    </Application.Resources>
    <Application.DataTemplates>
        <byteSync:ViewLocator/>
    </Application.DataTemplates>
    
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://ByteSync/Assets/Icons/BoxIcons.axaml"/>
        <StyleInclude Source="avares://ByteSync/Assets/Themes/LinearProgress.axaml"/>
        <StyleInclude Source="avares://ByteSync/Assets/Themes/GeneralStyles.axaml"/>
    </Application.Styles>
</Application>